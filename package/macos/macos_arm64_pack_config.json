{
    "packMode": "jpackage",
    "platform": "macos_arm64",
    "dest": "/Volumes/Files/Package/EasyZK/${appVersion}/EasyZK_${appVersion}.app",
    "appIcon": "${projectPath}/resource/zoo.icns",
    "mainJar": "${projectPath}/target/easyzk-${appVersion}.jar",
    "jdkPath": "$SYSTEM",
    "packr": {
        "verbose": true,
        "bundleIdentifier": "cn.oyzh.EasyZK",
        "mainClass": "org.springframework.boot.loader.JarLauncher",
        "classpath": []
    },
    "jpackage": {
        "verbose": true,
        "vendor": "oyzh",
        "type": "app-image",
        "description": "这是一个Zookeeper管理工具，提供导入、导出、传输、终端、可视化操作等功能."
    },
    "compress": {
        "type": "zip"
    },
    "jdeps": {
        "multi-release": 24,
        "summary": true,
        "skips": [
            "javafx-.*.jar"
        ],
        "excludes": [
            "jdk.jfr"
        ]
    },
    "jlink": {
        "exclude-files": [
            "**.md",
            "**LICENSE",
            "**jvm.lib",
            "**jawt.lib",
            "**jawt.dll",
            "**COPYRIGHT",
            "**prefs.dll",
            "**j2gss.dll",
            "**classlist",
            "**jsound.dll",
            "**README.txt",
            "**javajpeg.dll",
            "**mlib_image.dll",
            "**jrunscript.exe",
            "**sspi_bridge.dll",
            "**sound.properties",
            "**splashscreen.dll",
            "**w2k_lsa_auth.dll",
            "**ASSEMBLY_EXCEPTION",
            "**ADDITIONAL_LICENSE_INFO"
        ],
        "add-modules": [
            "java.xml",
            "java.sql",
            "java.base",
            "java.naming",
            "java.logging",
            "java.desktop",
            "java.scripting",
            "java.management",
            "java.datatransfer",
            "java.security.jgss",
            "jdk.unsupported"
        ]
    },
    "jre": {
        "excludes": [
            "COPYRIGHT",
            "README.txt",
            "sound.properties",
            "ASSEMBLY_EXCEPTION",
            "ADDITIONAL_LICENSE_INFO",
            ".*.md",
            "jawt.*",
            "j2gss.*",
            "prefs.*",
            "jsound.*",
            "LICENSE.*",
            "javajpeg.*",
            "classlist.*",
            "jrunscript.*",
            "splashscreen.*"
        ]
    },
    "jar": {
        "removeEmpty": true,
        "excludes": [
            "pom.xml",
            "pom.properties",
            "AUTHORS",
            "README.md",
            "README.txt",
            "DEPENDENCIES",
            "aot.factories",
            "changelog.txt",
            "module-info.class",
            "latestchanges.html",
            "package-info.class",
            "ASSEMBLY_EXCEPTION",
            "reflectionconfig.json",
            "release-timestamp.txt",
            "ADDITIONAL_LICENSE_INFO",
            "reactor.blockhound.integration.BlockHoundIntegration",
            "classpath.idx",
            "LICENSE.*",
            ".*.md",
            ".*.pro",
            ".*.xsd",
            "NOTICE.*",
            ".*.tooling",
            ".*.schemas",
            ".*.handlers",
            "lombok-.*.jar",
            ".*.processors",
            ".*.kotlin_module",
            ".*.dll",
            ".*.so",
            "javafx-graphics.*-win.jar",
            "javafx-graphics.*-mac.jar",
            "javafx-graphics.*-linux.*.jar"
        ]
    }
}
