<FlexHBox styleClass="root" xmlns:fx="http://javafx.com/fxml/1" flexWidth="100%" flexHeight="100%"
          fx:controller="cn.oyzh.easyzk.tabs.ZKNodeTab.ZKNodeTabController">
    <FlexVBox prefWidth="300" flexHeight="100%" fx:id="leftBox">
        <FlexHBox realHeight="32" flexWidth="100%">
            <ZKNodeSearchTypeComboBox initIndex="0" realHeight="24" realWidth="90" fx:id="searchType">
                <HBox.margin>
                    <Insets left="5" top="5"/>
                </HBox.margin>
            </ZKNodeSearchTypeComboBox>
            <ZKNodeSearchTextField onAction="#doSearch" onSearch="#doSearch" fx:id="searchKW" realHeight="24"
                                   flexWidth="100% - 105" maxLen="30">
                <HBox.margin>
                    <Insets left="5" top="5"/>
                </HBox.margin>
            </ZKNodeSearchTextField>
        </FlexHBox>
        <ZKNodeTreeView flexWidth="100%" fx:id="treeView" flexHeight="100% - 67">

        </ZKNodeTreeView>
        <FlexHBox flexWidth="100%" flexHeight="35">
            <SortAscSVGGlyph fx:id="sortAsc" size="15" onMousePrimaryClicked="#sortAsc">
                <HBox.margin>
                    <Insets left="5" top="10"/>
                </HBox.margin>
            </SortAscSVGGlyph>
            <SortDescSVGGlyph fx:id="sortDesc" size="15" managedBindVisible="true" visible="false"
                              onMousePrimaryClicked="#sortDesc">
                <HBox.margin>
                    <Insets left="5" top="10"/>
                </HBox.margin>
            </SortDescSVGGlyph>
            <PositioningSVGGlyph size="17" onMousePrimaryClicked="#positionNode">
                <HBox.margin>
                    <Insets left="5" top="10"/>
                </HBox.margin>
            </PositioningSVGGlyph>
        </FlexHBox>
    </FlexVBox>
    <FlexTabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" side="RIGHT" flexWidth="100% - 305"
                 flexHeight="100%"
                 rotateGraphic="true" disable="true">
        <FXTab text="%base.data">
            <graphic>
                <SVGGlyph cursorType="DEFAULT" url="/font/file-text.svg" size="13"/>
            </graphic>
            <FlexVBox flexWidth="100%" flexHeight="100%">
                <FlexHBox realHeight="32" flexWidth="100%">
                    <SaveSVGGlyph fx:id="saveNodeData" size="16" tipText="%base.saveTip1"
                                  onMousePrimaryClicked="#saveNodeData">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </SaveSVGGlyph>
                    <UndoSVGGlyph disable="true" fx:id="dataUndo" size="16" onMousePrimaryClicked="#dataUndo"
                                  tipText="%base.undoTip1">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
                    <RedoSVGGlyph disable="true" fx:id="dataRedo" size="16" onMousePrimaryClicked="#dataRedo"
                                  tipText="%base.redoTip1">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </RedoSVGGlyph>
                    <PasteSVGGlyph sizeStr="14,16" onMousePrimaryClicked="#pasteData" tipText="%base.pasteTip1">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </PasteSVGGlyph>
                    <ClearSVGGlyph size="16" onMousePrimaryClicked="#clearData">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </ClearSVGGlyph>
                    <QRCodeSVGGlyph fx:id="node2QRCode" size="16"
                                    onMousePrimaryClicked="#node2QRCode">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </QRCodeSVGGlyph>
                    <UnLockSVGGlyph tipText="%base.auth" size="15" onMousePrimaryClicked="#authNode">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </UnLockSVGGlyph>
                    <CollectSVGGlyph fx:id="collect" size="15" onMousePrimaryClicked="#collect">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </CollectSVGGlyph>
                    <UnCollectSVGGlyph managedBindVisible="true" visible="false" fx:id="unCollect" size="15"
                                       onMousePrimaryClicked="#unCollect">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </UnCollectSVGGlyph>
                    <RefreshSVGGlyph tipText="%base.refreshTip1" size="15" onMousePrimaryClicked="#reloadData">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </RefreshSVGGlyph>
                    <CopySVGGlyph tipText="%zk.node.main.copy1" size="16" onMousePrimaryClicked="#copyNode">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </CopySVGGlyph>
                    <SVGGlyph tipText="%base.copyPath" size="16" onMousePrimaryClicked="#copyNodePath"
                              url="/font/copy-path.svg">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </SVGGlyph>
                    <ClearableTextField fx:id="dataSearch" tipText="%base.searchKWTip" fontSize="11" realHeight="22"
                                        prefWidth="165">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                </FlexHBox>
                <RichDataTextAreaPane fontSize="12" fx:id="nodeData" flexHeight="100% - 67"
                                      flexWidth="100% - 2" onKeyPressed="#onNodeDataKeyPressed"/>
                <FlexHBox flexWidth="100%" flexHeight="35">
                    <HistorySVGGlyph tipText="%zk.node.main.dataHisTip1" size="16"
                                     onMousePrimaryClicked="#showHistory">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </HistorySVGGlyph>
                    <ZKDataFormatComboBox realHeight="24" fx:id="dataFormat" initIndex="0" fontSize="11" prefWidth="100"
                                          style="-fx-padding: 0;">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </ZKDataFormatComboBox>
                    <CharsetComboBox realHeight="24" initDefault="true" fx:id="charset" fontSize="11" prefWidth="120"
                                     style="-fx-padding: 0;">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </CharsetComboBox>
                    <FXLabel tipText="%base.loadCost" fx:id="loadTime"
                             style="-fx-cursor: HAND;-fx-fill: #009933;-fx-text-fill:#009933" maxWidth="120"
                             realHeight="18">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </FXLabel>
                </FlexHBox>
            </FlexVBox>
        </FXTab>
        <FXTab text="%base.stat">
            <graphic>
                <SVGGlyph cursorType="DEFAULT" url="/font/status.svg" size="13"/>
            </graphic>
            <FlexVBox flexWidth="100%" flexHeight="100%" fx:id="statBox">
                <FlexHBox realHeight="32" flexWidth="100%">
                    <FXToggleSwitch maxHeight="20" fx:id="statViewSwitch" unselectedText="%zk.node.main.toggle.normal"
                                    selectedText="%zk.node.main.toggle.friendly"
                                    selected="true">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </FXToggleSwitch>
                    <CopySVGGlyph size="16" onMousePrimaryClicked="#copyStat">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </CopySVGGlyph>
                    <RefreshSVGGlyph size="15" onMousePrimaryClicked="#reloadStat">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </RefreshSVGGlyph>
                </FlexHBox>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
                <fx:include source="zkNodeStatItem.fxml"/>
            </FlexVBox>
        </FXTab>
        <FXTab text="%base.acl">
            <graphic>
                <AccessControlSVGGlyph cursorType="DEFAULT" size="13"/>
            </graphic>
            <FlexVBox flexWidth="100%" flexHeight="100%">
                <FlexHBox realHeight="32" flexWidth="100%">
                    <FXToggleSwitch maxHeight="20" fx:id="aclViewSwitch" unselectedText="%zk.node.main.toggle.normal"
                                    selectedText="%zk.node.main.toggle.friendly"
                                    selected="true">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </FXToggleSwitch>
                    <AddSVGGlyph size="16" onMousePrimaryClicked="#toAddACL">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </AddSVGGlyph>
                    <CopySVGGlyph size="16" onMousePrimaryClicked="#copyACL">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </CopySVGGlyph>
                    <EditSVGGlyph size="16" onMousePrimaryClicked="#updateACL">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </EditSVGGlyph>
                    <DeleteSVGGlyph size="16" onMousePrimaryClicked="#deleteACL">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </DeleteSVGGlyph>
                    <RefreshSVGGlyph size="15" onMousePrimaryClicked="#reloadACL">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </RefreshSVGGlyph>
                    <PageBox fx:id="aclPage" realHeight="22"
                             realWidth="300" onPrevClicked="#aclPrevPage" onNextClicked="#aclNextPage">
                        <HBox.margin>
                            <Insets left="5" top="6"/>
                        </HBox.margin>
                    </PageBox>
                </FlexHBox>
                <ZKACLTableView fx:id="aclTableView" flexWidth="100%" flexHeight="100% - 32">
                    <columns>
                        <FlexTableColumn flexWidth="40%" fx:id="aclId" text="%base.identify" sortable="false"/>
                        <FlexTableColumn flexWidth="36%" fx:id="aclPerms" text="%base.perms" sortable="false"/>
                        <FlexTableColumn flexWidth="12%" fx:id="aclSchema" text="%base.schema" sortable="false"/>
                        <FlexTableColumn flexWidth="12% - 6" fx:id="aclStatus" text="%base.status"
                                         sortable="false"/>
                    </columns>
                </ZKACLTableView>
            </FlexVBox>
        </FXTab>
        <FXTab text="%base.quota" fx:id="quotaTab">
            <graphic>
                <SVGGlyph cursorType="DEFAULT" url="/font/quota.svg" size="13"/>
            </graphic>
            <FlexVBox flexWidth="100%" flexHeight="100%">
                <FlexHBox realHeight="32" flexWidth="100%">
                    <SaveSVGGlyph size="16" onMousePrimaryClicked="#saveQuota">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </SaveSVGGlyph>
                    <RefreshSVGGlyph size="15" onMousePrimaryClicked="#reloadQuota">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </RefreshSVGGlyph>
                    <CopySVGGlyph size="16" onMousePrimaryClicked="#copyACL">
                        <HBox.margin>
                            <Insets left="5" top="7"/>
                        </HBox.margin>
                    </CopySVGGlyph>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="30">
                    <SuccessLabel realWidth="135" text="%base.childNumber" maxHeight="30">
                        <HBox.margin>
                            <Insets top="5" left="5"/>
                        </HBox.margin>
                    </SuccessLabel>
                    <NumberTextField fx:id="quotaCount" realHeight="30" flexWidth="100% - 270" min="-1" value="-1"
                                     tipText="%zk.node.main.quotaCountTip">
                        <HBox.margin>
                            <Insets top="5" left="5"/>
                        </HBox.margin>
                    </NumberTextField>
                    <ClearButton onAction="#clearQuotaCount" realHeight="30">
                        <HBox.margin>
                            <Insets top="5" left="5"/>
                        </HBox.margin>
                    </ClearButton>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="30">
                    <FlexVBox.margin>
                        <Insets top="5"/>
                    </FlexVBox.margin>
                    <SuccessLabel realWidth="135" text="%base.size" maxHeight="30">
                        <HBox.margin>
                            <Insets top="5" left="5"/>
                        </HBox.margin>
                    </SuccessLabel>
                    <NumberTextField fx:id="quotaBytes" realHeight="30" flexWidth="100% - 270" min="-1"
                                     value="-1"
                                     tipText="%zk.node.main.quotaBytesTip">
                        <HBox.margin>
                            <Insets top="5" left="5"/>
                        </HBox.margin>
                    </NumberTextField>
                    <ClearButton onAction="#clearQuotaBytes" realHeight="30">
                        <HBox.margin>
                            <Insets top="5" left="5"/>
                        </HBox.margin>
                    </ClearButton>
                </FlexHBox>
            </FlexVBox>
        </FXTab>
    </FlexTabPane>
</FlexHBox>
