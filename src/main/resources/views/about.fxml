<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import cn.oyzh.fx.plus.controls.FlexVBox?>
<?import cn.oyzh.fx.plus.controls.FlexHBox?>
<?import cn.oyzh.fx.plus.controls.FXLabel?>
<?import cn.oyzh.fx.plus.controls.FlexText?>
<FlexVBox styleClass="panel,panel-primary" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.oyzh.easyzk.controller.AboutController" realWidth="330" realHeight="120">
    <FlexHBox flexWidth="100%" realHeight="25">
        <FXLabel text="程序名称：">
            <HBox.margin>
                <Insets left="15" top="5"/>
            </HBox.margin>
        </FXLabel>
        <FlexText fx:id="name">
            <HBox.margin>
                <Insets left="5" top="5"/>
            </HBox.margin>
        </FlexText>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="25">
        <FXLabel text="程序版本：">
            <HBox.margin>
                <Insets left="15" top="5"/>
            </HBox.margin>
        </FXLabel>
        <FlexText fx:id="version">
            <HBox.margin>
                <Insets left="5" top="5"/>
            </HBox.margin>
        </FlexText>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="25">
        <FXLabel text="更新日期：">
            <HBox.margin>
                <Insets left="15" top="5"/>
            </HBox.margin>
        </FXLabel>
        <FlexText fx:id="updateDate">
            <HBox.margin>
                <Insets left="5" top="5"/>
            </HBox.margin>
        </FlexText>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="25">
        <FlexText fx:id="copyright">
            <HBox.margin>
                <Insets left="15" top="5"/>
            </HBox.margin>
        </FlexText>
    </FlexHBox>
</FlexVBox>
