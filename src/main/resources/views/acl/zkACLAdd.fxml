<?xml version="1.0" encoding="UTF-8"?>

<?import cn.oyzh.fx.plus.controls.*?>
<?import cn.oyzh.fx.plus.controls.svg.*?>
<?import cn.oyzh.fx.plus.controls.text.*?>
<?import cn.oyzh.fx.plus.controls.area.*?>
<?import cn.oyzh.fx.plus.controls.combo.*?>
<?import cn.oyzh.fx.plus.controls.button.*?>
<?import cn.oyzh.fx.plus.controls.textfield.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<FlexVBox styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.oyzh.easyzk.controller.acl.ZKACLAddController" realWidth="600" realHeight="420">
    <FlexHBox flexWidth="100%" realHeight="50">
        <AccentLabel text="%base.path" realWidth="80" realHeight="30" >
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <DisabledTextField fx:id="nodePath" realHeight="30" flexWidth="100% - 140">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </DisabledTextField>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50">
        <AccentLabel text="%zk.aclType" realWidth="80" realHeight="30">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <FlexComboBox fx:id="aclType" realHeight="30" flexWidth="100% - 140" initIndex="0" require="true">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="开放认证(WORLD)"/>
                    <String fx:value="摘要认证(DIGEST)-用户密码明文"/>
                    <String fx:value="摘要认证(DIGEST)-用户密码摘要"/>
                    <String fx:value="摘要认证(DIGEST)-已有认证信息"/>
                    <String fx:value="IP认证(IP)-单IP"/>
                    <String fx:value="IP认证(IP)-多IP"/>
                </FXCollections>
            </items>
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </FlexComboBox>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50" fx:id="permsBox">
        <AccentLabel text="%zk.aclScope" realWidth="80" realHeight="30">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <FlexHBox realHeight="30" flexWidth="100% - 140" fx:id="perms">
            <padding>
                <Insets left="10" top="20"/>
            </padding>
            <FlexCheckBox text="特权" selected="true" realWidth="60"/>
            <FlexCheckBox text="写入" selected="true" realWidth="60">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
            <FlexCheckBox text="读取" selected="true" realWidth="60">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
            <FlexCheckBox text="删除子节点" selected="true" realWidth="90">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
            <FlexCheckBox text="创建子节点" selected="true" realWidth="90">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
        </FlexHBox>
    </FlexHBox>
    <FlexVBox flexWidth="100%" managed="false" realHeight="65" visible="false" fx:id="digest1ACL">
        <FlexHBox realHeight="50" flexWidth="100%">
            <AccentLabel text="%zk.authInfo" realWidth="80" realHeight="30">
                <HBox.margin>
                    <Insets left="20" top="10"/>
                </HBox.margin>
            </AccentLabel>
            <ClearableTextField promptText="%base.userName" tipText="%base.userName" fx:id="digestInfo1User" realHeight="30" flexWidth="50% - 115" >
                <HBox.margin>
                    <Insets left="10" top="10"/>
                </HBox.margin>
            </ClearableTextField>
            <ClearableTextField promptText="密码(明文)" tipText="密码(明文)" fx:id="digestInfo1Password" realHeight="30" flexWidth="50% - 115" >
                <HBox.margin>
                    <Insets left="5" top="10"/>
                </HBox.margin>
            </ClearableTextField>
            <FlexCheckBox text="%base.save" realWidth="80" fx:id="digestSaveInfo" tipText="保存认证信息" selected="true">
                <HBox.margin>
                    <Insets left="10" top="15"/>
                </HBox.margin>
            </FlexCheckBox>
        </FlexHBox>
        <FlexHBox flexWidth="100%" realHeight="15">
            <VBox.margin>
                <Insets left="95"/>
            </VBox.margin>
            <FXLabel fx:id="digestText"/>
            <CopyButton fx:id="copyDigestText" tipText="复制摘要信息"  visible="false" onMousePrimaryClicked="#copyDigestText">
                <HBox.margin>
                    <Insets left="15"/>
                </HBox.margin>
            </CopyButton>
        </FlexHBox>
    </FlexVBox>
    <FlexHBox flexWidth="100%" managed="false" realHeight="50" visible="false" fx:id="digest2ACL">
        <AccentLabel text="%zk.authInfo" realWidth="80" realHeight="30">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <ClearableTextField promptText="格式user:digest" tipText="格式user:digest" fx:id="digestInfo2" realHeight="30" flexWidth="100% - 140" >
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </ClearableTextField>
    </FlexHBox>
    <FlexHBox flexWidth="100%" managed="false" realHeight="50" visible="false" fx:id="digest3ACL">
        <AccentLabel text="%zk.authInfo" realWidth="80" realHeight="30">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <FlexComboBox tipText="请选择认证信息" fx:id="digestInfo3" realHeight="30" flexWidth="100% - 140">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </FlexComboBox>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50" managed="false" visible="false" fx:id="ip1ACL">
        <AccentLabel text="%base.ipAddr" realWidth="80" realHeight="30">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <ClearableTextField fx:id="ipContent1" realHeight="30" flexWidth="100% - 335" promptText="请输入ip地址" tipText="请输入ip地址" >
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </ClearableTextField>
        <SuccessButton realHeight="30" realWidth="80" text="网段模式" onMousePrimaryClicked="#segmentModel">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </SuccessButton>
    </FlexHBox>
    <FlexHBox flexWidth="100%" managed="false" realHeight="260" visible="false" fx:id="ip2ACL">
        <AccentLabel text="IP内容" realWidth="80" realHeight="30">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </AccentLabel>
        <FlexTextArea
                promptText="请输入内容，格式ip/网段:权限，多个ip/网段以英文分号分隔，例如192.168.2.19:crdwa;192.169.3.0/16:crdwa"
                tipText="请输入内容，格式ip/网段:权限，多个ip/网段以英文分号分隔，例如192.168.2.19:crdwa;192.169.3.0/16:crdwa"
                      fx:id="ipContent2" realHeight="240" flexWidth="100% - 140">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </FlexTextArea>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50">
        <SubmitButton onAction="#addACL">
            <HBox.margin>
                <Insets left="110" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FlexHBox>
</FlexVBox>
