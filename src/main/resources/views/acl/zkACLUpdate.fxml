<?xml version="1.0" encoding="UTF-8"?>

<?import cn.oyzh.fx.plus.controls.*?>
<?import cn.oyzh.fx.plus.controls.text.*?>
<?import cn.oyzh.fx.plus.controls.button.*?>
<?import cn.oyzh.fx.plus.controls.textfield.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<FlexVBox styleClass="panel,panel-primary" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.oyzh.easyzk.controller.acl.ZKACLUpdateController" realWidth="600" realHeight="300">
    <FlexHBox flexWidth="100%" realHeight="50">
        <FXLabel text="节点路径" realWidth="65" realHeight="30" styleClass="lbl,lbl-primary">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </FXLabel>
        <DisabledField fx:id="nodePath" realHeight="30" flexWidth="100% - 140">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </DisabledField>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50">
        <FXLabel text="权限类型" realWidth="65" realHeight="30" styleClass="lbl,lbl-primary">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </FXLabel>
        <DisabledField realHeight="30" flexWidth="100% - 140" fx:id="aclType">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </DisabledField>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50">
        <FXLabel text="权限范围" realWidth="65" realHeight="30" styleClass="lbl,lbl-primary">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </FXLabel>
        <FlexHBox realHeight="30" flexWidth="100% - 140" fx:id="perms">
            <padding>
                <Insets left="10" top="20"/>
            </padding>
            <FlexCheckBox text="特权" realWidth="60"/>
            <FlexCheckBox text="写入" realWidth="60">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
            <FlexCheckBox text="读取" realWidth="60">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
            <FlexCheckBox text="删除子节点" realWidth="90">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
            <FlexCheckBox text="创建子节点" realWidth="90">
                <HBox.margin>
                    <Insets left="5"/>
                </HBox.margin>
            </FlexCheckBox>
        </FlexHBox>
    </FlexHBox>
    <FlexHBox fx:id="digestACL" flexWidth="100%" realHeight="50" managed="false" visible="false">
        <FXLabel text="认证信息" realWidth="65" realHeight="30" styleClass="lbl,lbl-primary">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </FXLabel>
        <DisabledField fx:id="digest" realHeight="30" flexWidth="100% - 140">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </DisabledField>
    </FlexHBox>
    <FlexHBox fx:id="ipACL" flexWidth="100%" realHeight="50" managed="false" visible="false">
        <FXLabel text="IP地址" realWidth="65" realHeight="30" styleClass="lbl,lbl-primary">
            <HBox.margin>
                <Insets left="20" top="10"/>
            </HBox.margin>
        </FXLabel>
        <DisabledField fx:id="ip" realHeight="30" flexWidth="100% - 140">
            <HBox.margin>
                <Insets left="10" top="10"/>
            </HBox.margin>
        </DisabledField>
    </FlexHBox>
    <FlexHBox flexWidth="100%" realHeight="50">
        <SubmitButton onAction="#updateACL">
            <HBox.margin>
                <Insets left="95" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FlexHBox>
</FlexVBox>
