<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.plus.controls.area.LimitTextArea?>
<?import cn.oyzh.fx.plus.controls.button.CancelButton?>
<?import cn.oyzh.fx.plus.controls.button.FlexCheckBox?>
<?import cn.oyzh.fx.plus.controls.button.SubmitButton?>
<?import cn.oyzh.fx.plus.controls.button.TestButton?>
<?import cn.oyzh.fx.plus.controls.digital.NumberTextField?>
<?import cn.oyzh.fx.plus.controls.digital.PortTextField?>
<?import cn.oyzh.fx.plus.controls.FlexHBox?>
<?import cn.oyzh.fx.plus.controls.FlexVBox?>
<?import cn.oyzh.fx.plus.controls.tab.FlexTabPane?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.plus.controls.text.AccentLabel?>
<?import cn.oyzh.fx.plus.controls.text.FXLabel?>
<?import cn.oyzh.fx.plus.controls.textfield.ClearableTextField?>
<?import cn.oyzh.fx.plus.controls.toggle.SwitchToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<FlexVBox styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.oyzh.easyzk.controller.info.ZKInfoAddController" realWidth="750" realHeight="320">
    <FlexTabPane fx:id="tabPane" flexWidth="100%" flexHeight="100% - 60">
        <FXTab text="%base.base">
            <FlexVBox flexWidth="100%" flexHeight="100%">
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.name">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <ClearableTextField fx:id="name" tipText="%base.nameTip" maxLen="20" require="true" realHeight="30" flexWidth="100% - 140">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </ClearableTextField>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.host">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <ClearableTextField fx:id="hostIp"
                                        tipText="%base.hostTip"
                                        require="true"
                                        realHeight="30"
                                        flexWidth="100% - 140" maxLen="1024">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </ClearableTextField>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.port">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <PortTextField flexWidth="100% - 140" fx:id="hostPort"
                                   tipText="端口号(1-65535)"
                                   realHeight="30"
                                   value="2181">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </PortTextField>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.options">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <FlexCheckBox text="%base.readonly" tipText="开启只读模式，防止误操作数据" fx:id="readonly">
                        <HBox.margin>
                            <Insets left="10" top="16"/>
                        </HBox.margin>
                    </FlexCheckBox>
                    <FlexCheckBox fx:id="listen" text="监听节点" fontSize="11" selected="true"
                                  tipText="监听节点变化，可看到其他客户端的操作，关闭后仅能看到当前客户端的操作，数据更新可能不及时">
                        <HBox.margin>
                            <Insets left="10" top="16"/>
                        </HBox.margin>
                    </FlexCheckBox>
                    <FlexCheckBox fx:id="compatibility" text="兼容模式" fontSize="11"
                                  tipText="如果zk服务端是3.4.x版本或更早、添加节点时出现未实现提示，无法连接、连接异常等，可尝试开启此选项">
                        <HBox.margin>
                            <Insets left="10" top="16"/>
                        </HBox.margin>
                    </FlexCheckBox>
                </FlexHBox>
            </FlexVBox>
        </FXTab>
        <FXTab text="%base.extra">
            <FlexVBox flexWidth="100%" flexHeight="100%">
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.connectTimeout">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <NumberTextField realHeight="30" flexWidth="100% - 140" min="3" max="30" fx:id="connectTimeOut"
                                     tipText="超时时间(3-30)，单位秒，默认5秒"
                                     value="5"
                                     require="true">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </NumberTextField>
                    <FXLabel text="秒">
                        <HBox.margin>
                            <Insets left="5" top="18"/>
                        </HBox.margin>
                    </FXLabel>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.sessionTimeout">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <NumberTextField realHeight="30" flexWidth="100% - 140" min="5" max="120" fx:id="sessionTimeOut"
                                     tipText="超时时间(5-120)，单位分钟，默认30分钟"
                                     value="30"
                                     require="true" step="5">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </NumberTextField>
                    <FXLabel text="分">
                        <HBox.margin>
                            <Insets left="5" top="18"/>
                        </HBox.margin>
                    </FXLabel>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="100">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.remark">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <LimitTextArea fx:id="remark" realHeight="80" flexWidth="100% - 140"
                                   tipText="%base.remarkTip"
                                   maxLen="100">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </LimitTextArea>
                </FlexHBox>
            </FlexVBox>
        </FXTab>
        <FXTab text="%base.ssh">
            <FlexVBox flexWidth="100%" flexHeight="100%">
                <FlexHBox flexWidth="100%" realHeight="50">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.enableSSHChannel">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <SwitchToggleSwitch fx:id="sshForward">
                        <HBox.margin>
                            <Insets left="10" top="15"/>
                        </HBox.margin>
                    </SwitchToggleSwitch>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50" fx:id="sshHostBox" disable="true">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.host">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <ClearableTextField fx:id="sshHost" tipText="%base.hostTip" require="true" realHeight="30" flexWidth="100% - 245" maxLen="1024">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PortTextField realWidth="100" fx:id="sshPort" realHeight="30" value="22">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </PortTextField>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50" fx:id="sshTimeoutBox" disable="true">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.connectTimeout">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <NumberTextField flexWidth="100% - 140" fx:id="sshTimeout"
                                     tipText="%info.sshTimeoutTip"
                                     realHeight="30"
                                     value="3000">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </NumberTextField>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50" fx:id="sshAuthBox" disable="true">
                    <AccentLabel realHeight="30" realWidth="80" text="%base.sshInfo">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </AccentLabel>
                    <ClearableTextField fx:id="sshUser" tipText="%base.sshUserTip" require="true" realHeight="30" flexWidth="50% - 73" text="root">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <ClearableTextField fx:id="sshPassword" tipText="%base.sshPwdTip" require="true" realHeight="30" flexWidth="50% - 72">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </ClearableTextField>
                </FlexHBox>
            </FlexVBox>
        </FXTab>
    </FlexTabPane>
    <FlexHBox flexWidth="100%" realHeight="50">
        <TestButton onAction="#testConnect" iconSizePercent="0.8">
            <HBox.margin>
                <Insets left="110" top="10"/>
            </HBox.margin>
        </TestButton>
        <SubmitButton onAction="#add">
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FlexHBox>
</FlexVBox>
