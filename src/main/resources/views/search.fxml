<?xml version="1.0" encoding="UTF-8"?>

<?import cn.oyzh.fx.plus.controls.button.FXCheckBox?>
<?import cn.oyzh.fx.plus.controls.FlexHBox?>
<?import cn.oyzh.fx.plus.controls.FlexVBox?>
<?import cn.oyzh.fx.plus.controls.svg.SVGGlyph?>
<?import cn.oyzh.fx.plus.controls.text.FlexText?>
<?import cn.oyzh.fx.plus.search.SearchTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<FlexVBox styleClass="root" fx:id="searchMain" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="cn.oyzh.easyzk.controller.SearchController">
    <FlexHBox realHeight="30" flexWidth="100%">
        <SearchTextField onSearch="#searchNext" fx:id="searchKW" realHeight="24" realWidth="225" maxLen="30"
                         promptText="搜索(↑↓切换，回车执行)"
                         tipText="使用Ctrl+F聚焦，使用↑↓切换历史，使用回车执行搜索"
                         onKeyPressed="#onSearchKeyPressed">
            <HBox.margin>
                <Insets left="10" top="3"/>
            </HBox.margin>
        </SearchTextField>
        <SVGGlyph fx:id="searchNext" disable="true" url="/font/direction-down.svg" tipText="查找下一个(快捷键Enter)"
                  onMousePrimaryClicked="#searchNext" size="12">
            <HBox.margin>
                <Insets left="5" top="9"/>
            </HBox.margin>
        </SVGGlyph>
        <SVGGlyph fx:id="searchPrev" disable="true" url="/font/direction-up.svg" tipText="查找上一个"
                  onMousePrimaryClicked="#searchPrev" size="12">
            <HBox.margin>
                <Insets left="5" top="9"/>
            </HBox.margin>
        </SVGGlyph>
        <SVGGlyph fx:id="searchAnalyse" disable="true" url="/font/NLP_text.svg" tipText="分析搜索词"
                  onMousePrimaryClicked="#searchAnalyse" size="12">
            <HBox.margin>
                <Insets left="5" top="9"/>
            </HBox.margin>
        </SVGGlyph>
        <FlexText fx:id="searchResult" fontSize="11">
            <HBox.margin>
                <Insets left="5" top="9"/>
            </HBox.margin>
        </FlexText>
    </FlexHBox>
    <FlexHBox realHeight="30" flexWidth="100%">
        <SearchTextField onSearch="#replace" fx:id="replaceKW" realHeight="24" realWidth="225" maxLen="30"
                         promptText="替换(↑↓切换，回车执行)"
                         tipText="使用↑↓切换历史，使用回车执行搜索"
                         onKeyPressed="#onReplaceKeyPressed">
            <HBox.margin>
                <Insets left="10" top="3"/>
            </HBox.margin>
        </SearchTextField>
        <SVGGlyph fx:id="replace" disable="true" url="/font/financial_replace.svg"
                  tipText="替换下一个(快捷键Enter)" size="12"
                  onMousePrimaryClicked="#replace">
            <HBox.margin>
                <Insets left="5" top="9"/>
            </HBox.margin>
        </SVGGlyph>
        <FlexText fx:id="replaceTips" fill="tomato" fontSize="11">
            <HBox.margin>
                <Insets left="5" top="9"/>
            </HBox.margin>
        </FlexText>
    </FlexHBox>
    <FlexHBox realHeight="30" flexWidth="100%" fontSize="10">
        <FXCheckBox text="%main.zk.checkbox.filterMode" selected="true" fx:id="filterMode">
            <HBox.margin>
                <Insets left="10" top="3"/>
            </HBox.margin>
        </FXCheckBox>
        <FXCheckBox text="%main.zk.checkbox.searchPath" selected="true" fx:id="searchPath">
            <HBox.margin>
                <Insets left="5" top="3"/>
            </HBox.margin>
        </FXCheckBox>
        <FXCheckBox text="%main.zk.checkbox.searchData" selected="true" fx:id="searchData">
            <HBox.margin>
                <Insets left="5" top="3"/>
            </HBox.margin>
        </FXCheckBox>
        <FXCheckBox text="%main.zk.checkbox.matchCase" fx:id="matchCase">
            <HBox.margin>
                <Insets left="5" top="3"/>
            </HBox.margin>
        </FXCheckBox>
        <FXCheckBox text="%main.zk.checkbox.matchFull" fx:id="matchFull">
            <HBox.margin>
                <Insets left="5" top="3"/>
            </HBox.margin>
        </FXCheckBox>
    </FlexHBox>
</FlexVBox>
