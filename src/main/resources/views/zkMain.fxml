<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.easyzk.fx.ZKMsgTextArea?>
<?import cn.oyzh.easyzk.tabs.ZKTabPane?>
<?import cn.oyzh.easyzk.trees.ZKTreeView?>
<?import cn.oyzh.fx.plus.controls.button.FlexCheckBox?>
<?import cn.oyzh.fx.plus.controls.FlexFlowPane?>
<?import cn.oyzh.fx.plus.controls.FlexHBox?>
<?import cn.oyzh.fx.plus.controls.FlexPane?>
<?import cn.oyzh.fx.plus.controls.FlexVBox?>
<?import cn.oyzh.fx.plus.controls.svg.ClearSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.svg.ConnectionSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.svg.MessageSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.svg.PositioningSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.svg.SortAscSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.svg.SortDescSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.svg.TerminalSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.tab.FlexTabPane?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<FlexPane styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.oyzh.easyzk.controller.ZKMainController" flexWidth="100%" flexHeight="100% - 30">
    <FlexTabPane flexHeight="100%" realWidth="440" rotateGraphic="true" side="LEFT" fx:id="tabPaneLeft">
        <FXTab text="%base.connection">
            <graphic>
                <ConnectionSVGGlyph initCursor="DEFAULT" size="12"/>
            </graphic>
            <FlexVBox flexHeight="100%" flexWidth="100% - 8"
                      style="-fx-border-width: 0 1 0 0; -fx-border-color: #c0c0c0">
                <FlexHBox realHeight="30" flexWidth="100%">
                    <TerminalSVGGlyph size="15" onMousePrimaryClicked="#openTerminal">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </TerminalSVGGlyph>
                    <SortAscSVGGlyph fx:id="sortAsc" size="15" onMousePrimaryClicked="#sortAsc">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </SortAscSVGGlyph>
                    <SortDescSVGGlyph fx:id="sortDesc" size="15" visible="false" managed="false"
                                      onMousePrimaryClicked="#sortDesc">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </SortDescSVGGlyph>
                    <PositioningSVGGlyph size="17" onMousePrimaryClicked="#positionNode">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </PositioningSVGGlyph>
                </FlexHBox>
                <FlexFlowPane realHeight="30" flexWidth="100%">
                    <FlexCheckBox text="%main.zk.checkbox.filterEphemeral" fx:id="filterEphemeral" fontSize="9">
                        <FlowPane.margin>
                            <Insets left="10" top="5"/>
                        </FlowPane.margin>
                    </FlexCheckBox>
                    <FlexCheckBox text="%main.zk.checkbox.filterSub" fx:id="filterSubNode" fontSize="9">
                        <FlowPane.margin>
                            <Insets left="8" top="5"/>
                        </FlowPane.margin>
                    </FlexCheckBox>
                    <FlexCheckBox text="%base.onlyCollect" fx:id="onlyCollect" fontSize="9">
                        <FlowPane.margin>
                            <Insets left="5" top="5"/>
                        </FlowPane.margin>
                    </FlexCheckBox>
                </FlexFlowPane>
                <fx:include visible="false" managed="false" fx:id="search" source="search.fxml" realHeight="90"
                            flexWidth="100% - 2"/>
                <ZKTreeView fx:id="tree" flexHeight="100% - 60" flexWidth="100%"/>
            </FlexVBox>
        </FXTab>
        <FXTab text="%base.msg">
            <graphic>
                <MessageSVGGlyph initCursor="DEFAULT" size="13"/>
            </graphic>
            <FlexVBox flexHeight="100%" flexWidth="100% - 8" style="-fx-border-width: 0 1 0 0; -fx-border-color: c0c0c0">
                <FlexHBox realHeight="30">
                    <ClearSVGGlyph size="16" onMousePrimaryClicked="#clearMsg">
                        <HBox.margin>
                            <Insets left="10" top="9"/>
                        </HBox.margin>
                    </ClearSVGGlyph>
                </FlexHBox>
                <ZKMsgTextArea fx:id="msgArea" flexHeight="100% - 32" flexWidth="100%" maxLine="1000"/>
            </FlexVBox>
        </FXTab>
       <fx:include fx:id="dataHistory" source="dataHistory.fxml"/>
    </FlexTabPane>
    <ZKTabPane fx:id="tabPane" layoutX="440" flexWidth="100% - 440" tabDragPolicy="FIXED" tabClosingPolicy="ALL_TABS"
               flexHeight="100%"/>
</FlexPane>
